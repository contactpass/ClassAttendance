<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_studentCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="#C188E4"
            android:paddingStart="10sp"
            android:paddingTop="2sp"
            android:paddingEnd="10sp"
            android:paddingBottom="2sp"
            android:text="@string/student_id"
            android:textColor="#3416B2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_studentname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#D0D5D1"
            android:paddingStart="10sp"
            android:paddingTop="2sp"
            android:paddingEnd="10sp"
            android:paddingBottom="2sp"
            android:text="Student name"
            app:layout_constraintEnd_toStartOf="@+id/text_status"
            app:layout_constraintStart_toStartOf="@+id/text_studentCode"
            app:layout_constraintTop_toBottomOf="@+id/text_studentCode" />

        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D0D5D1"
            android:paddingStart="10sp"
            android:paddingTop="2sp"
            android:paddingEnd="10sp"
            android:paddingBottom="2sp"
            android:text="@string/status"
            android:textColor="#3BB75B"
            app:layout_constraintEnd_toEndOf="@+id/text_studentCode"
            app:layout_constraintTop_toBottomOf="@+id/text_studentCode" />


    </android.support.constraint.ConstraintLayout>


</LinearLayout>