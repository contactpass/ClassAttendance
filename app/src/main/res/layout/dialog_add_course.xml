<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/edit_couseno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="6"
        android:hint="Course no."
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Title"
        app:layout_constraintStart_toStartOf="@+id/edit_couseno"
        app:layout_constraintTop_toBottomOf="@+id/edit_couseno" />

    <EditText
        android:id="@+id/edit_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="4"
        android:hint="Day"
        app:layout_constraintStart_toStartOf="@+id/edit_title"
        app:layout_constraintTop_toBottomOf="@+id/edit_title" />

    <EditText
        android:id="@+id/edit_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:hint="Start Time"
        app:layout_constraintStart_toStartOf="@+id/edit_day"
        app:layout_constraintTop_toBottomOf="@+id/edit_day" />

    <EditText
        android:id="@+id/edit_endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:hint="End Time"
        app:layout_constraintStart_toStartOf="@+id/edit_starttime"
        app:layout_constraintTop_toBottomOf="@+id/edit_starttime" />

    <EditText
        android:id="@+id/edit_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:hint="Section"
        app:layout_constraintStart_toStartOf="@+id/edit_endtime"
        app:layout_constraintTop_toBottomOf="@+id/edit_endtime" />


</android.support.constraint.ConstraintLayout>